{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "/typechain/*": ["./typechain-types/*"],
      "/utils/*": ["./utils/*"],
      "/constants/*": ["./constants/*"],
      "/types/*": ["./types/*"]
    }
  },
  "include": ["./scripts", "./deploy", "./tests", "./typechain-types", "./utils", "./constants", "./types"],
  "files": ["./hardhat.config.ts"]
}
